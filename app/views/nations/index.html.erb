<% if user_signed_in? %>
<div class="well">
  <h1 class="banner">Long live <%= @user.user_name %>, long live <%= @nation.name %></h1>
  <div class="row">
    <div class="col-md-2">
      <h2>Culture:</h2>
      <h3><%=  @nation.culture %></h3>
    </div>
    <div class="col-md-3">
      <h2>Government:</h2>
      <h3><%= @nation.govt %></h3>
    </div>
    <div class="col-md-3">
      <h2>Economy:</h2>
      <h3><%= @nation.econ %></h3>
    </div>
    <div class="col-md-3">
      <h2> Geography:</h2>
      <h3><%= @nation.geo %></h3>
    </div>
  </div>
</div>
<% else %>
<div class="jumbotron">
  <h2>You must sign in to play!</h2>
  <h6>Thats the rules...</h6>
</div>
<% end %>
<%= render "/statistics/stat_display", statistics: @statistics %>
